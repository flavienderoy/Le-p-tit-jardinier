{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block content %}

<div class="bloc">
    <h1>Liste des clients inscrits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code Postal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.ville }}</td>
                <td>{{ user.cp }}</td>
                <td>
                    <a class="bouton_formulaire" href="{{ path('app_user_crud_show', {'id': user.id}) }}">Afficher</a>
                    <a class="bouton_formulaire" href="{{ path('app_user_crud_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun clients trouv√©.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
