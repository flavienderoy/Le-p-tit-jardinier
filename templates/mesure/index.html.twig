{% extends 'base.html.twig' %}

{% block title %}Hello MesureController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>


	{% block content %}

		<div class="bloc">

				<h1 style=" display: inline;">Veuillez saisir les
					<span style="color: #319F5F;">mesures</span>
					de la haie.</h2>

				<form
					action="{{ path('app_devis') }}" method="post">
					{# La validation de formulaire va envoyer vers Devis #}

					<label for="haie">Choisir votre type de haie</label>

					<select name='haie' id='haie' required>
						{% for uneHaie in mesHaies %}
							{# Pour obtenir chaque donnée de haie, on utilise un foreach qui parcours toute les ligne de la bdd : "Pour une haie dans les haies" #}
							<option value="{{uneHaie.getCode()}}">
								{{uneHaie.getNom()}}</option>
							{# On utilise la méthode getCode() qui récupère le code de chaque ligne de haie ainsi que getNom() qui récupère le nom #}
						{% endfor %}

					</select>

					<label for="longueur">Longueur</label>

					<input
					type="text" id="longueur" name="longueur" required>
					{# On récupère la donnée instancié dans l'input texte qui servira pour la controlleur Devis #}

					<label for="hauteur">Hauteur</label>

					<input
					type="text" id="hauteur" name="hauteur" required>
					{# On récupère la donnée instancié dans l'input texte qui servira pour la controlleur Devis #}


					<button class="bouton_validation" type="submit">Valider</button>

				</form>
		</div>
	{% endblock %}
{% endblock %}
