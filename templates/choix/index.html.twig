{% extends 'base.html.twig' %}

{% block title %}Hello ChoixController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	{% block content %}
		{# Contenu de la page #}

		<div class="bloc">

			<div class="example-wrapper" style="  margin: 0 auto;
					  width: 50%; ">

				<div class="milieu">
					<h1 style=" display: inline;">Veuillez saisir votre
						<span style="color: #319F5F;">statut</span>.</h2>
				</div>

				<form
					action="{{ path('app_register') }}" method="post">
					{# Le formulaire est obligatoire pour la redirection vers l'autre page lors de la validation de formulaire (les zones de textes, ...) #}
					<div class="card">
						<input type="radio" id="particulier" name="choix" value="p">
						<label for="particulier">
							<div class="card-text">
								<h3>Particulier</h3>
								<p>Vous n'obtiendrez pas de remise.</p>
							</div>
						</label>
					</div>

					<div class="card">
						<input type="radio" id="entreprise" name="choix" value="e">
						<label for="entreprise">
							<div class="card-text">
								<h3>Entreprise</h3>
								<p>Vous obtiendrez une remise de 10%.</p>
							</div>
						</label>
					</div>

					<div class="milieu">
						<input class="bouton_validation" type="submit" value="Continuer">
					</div>

				</form>

			</div>
		</div>
	{% endblock %}
{% endblock %}
